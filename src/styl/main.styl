.file-input-name {
    display: none;
}

.imagewidget-input-image > button {
    position: absolute;
    width: 40px;
    z-index: 1;
}

.imagewidget-input-image > button.remove {
    left: calc(100% - 56px);
}

.imagewidget-input-image > button.retry {
    left: calc(100% - 96px);
}

.imagewidget-backlight {
    z-index: 10;
    position: fixed;
    left: 0;
    top: 53px;
    margin: 0;
    padding: 0;
    border: none;
    background-color: rgba(0,0,0,0.5);
    width: 100%;
    height: calc(100% - 53px);
    overflow-y: auto;
}

.closed {
    display: none;
}

@media screen and (max-width: 750px) {
    .imagewidget-backlight {
        top: 50px;
        height: calc(100% - 50px);
    }
}

.imagewidget-popup {
    width: 80%;
    background-color: white;
    position: relative;
    margin: 20px auto;
    padding: 20px;
}

.imagewidget-popup .input-group {
    margin: 20px 0;
    /* float:  right; */
}


.thumbnail img { min-height:150px; height:150px !important; }

.imagewidget-input-image.loading > .thumbnail {
    background-color: rgba(0,0,255,0.5);
}

.imagewidget-input-image.error > .thumbnail {
    background-color: rgba(255,0,0,0.5);
}

.imagewidget-input-image.error > .thumbnail > img {
    opacity: 0.7;
}

.imagewidget-add-image {
    cursor: pointer;
}

.imagewidget-add-image > .thumbnail {
    border: none;
}

.imagewidget-add-image .glyphicon {
    font-size: 145px;
    height: 150px;
    padding: 0 5px;
}

.imagewidget-add-image:hover .glyphicon {
    color: rgb(80,80,80);
}

.imagewidget-input-image .thumbnail.zoomable {
    cursor: zoom-in;
}

.img-port {
    width: 98%;
    height: auto;
    margin: 20px auto;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    cursor: pointer;
}

.img-port img {
    opacity: 0;
    width: 100%;
    height: 100%;
}

.imagewidget-popup-content {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.imagewidget-popup-content .thumbnail {
    width: 200px;
    margin: 20px 0;
    margin-left: 20px;
}

.pagination > li > a {
    cursor: pointer;
}

.imagewidget-library-image:not(.chosen) {
    opacity: 0.7;
}
.imagewidget-library-image.chosen {
    border-color: rgb(51, 122, 183);
    border-width: 2px;
}
.imagewidget-library-image.chosen > img {
    opacity: 1;
}
